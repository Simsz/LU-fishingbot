{
    "name": "LU Fish Bot",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["activeTab", "tabs", "tabCapture", "notifications"],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Q"
        },
        "description": "Start the fishbot"
      }
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
